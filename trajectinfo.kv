#:import Button kivy.uix.button.Button
#:import ComboEdit combobox.ComboEdit
<TrajectInfoCore>:
    orientation: 'vertical'

    BoxLayout:
        id: form_box
        orientation: 'horizontal'

        Label:
            id: from_label
            text: 'Van: '
            padding_x: 2

        ComboEdit:
            id: from_field
            options:
                [Button(text=str(station), size_hint_y=None, height=30) for station in root.stations]

        Label:
            id: to_label
            text: 'Naar: '
            padding_x: 2

        ComboEdit:
            id: to_field
            options:
                [Button(text=str(station), size_hint_y=None, height=30) for station in root.stations]

        Button:
            id: submit_button
            text: 'Vraag informatie op'
            on_release: root.get_delay_info()

    Widget:
        id: whitespace1

    Widget:
        id: whitespace2